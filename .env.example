# Google Flights Scraper Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================

# Server host and port
MCP_HOST=localhost
MCP_PORT=8000

# Enable debug logging (true/false)
MCP_DEBUG=false

# Custom log file path (optional)
# MCP_LOG_FILE=/path/to/custom.log

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# SCRAPER CONFIGURATION  
# =============================================================================

# Browser settings
DEFAULT_HEADLESS=true
BROWSER_TIMEOUT=30000
NAVIGATION_TIMEOUT=60000

# Retry configuration
RETRY_ATTEMPTS=3
RETRY_DELAY=2

# Default search limits
DEFAULT_MAX_RESULTS=10
MAX_RESULTS_LIMIT=50

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Page load delays (milliseconds)
MIN_DELAY=1000
MAX_DELAY=3000

# Element wait timeouts
ELEMENT_WAIT_TIMEOUT=10000
SEARCH_RESULTS_TIMEOUT=30000

# =============================================================================
# OUTPUT CONFIGURATION
# =============================================================================

# Default output format (table, json, csv)
DEFAULT_OUTPUT_FORMAT=table

# Default file output directory
# OUTPUT_DIRECTORY=./output

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable browser devtools (development only)
ENABLE_DEVTOOLS=false

# Show browser window (development only) 
SHOW_BROWSER=false

# Slow down browser automation for debugging
SLOW_MO=0

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# Custom user agent (optional)
# CUSTOM_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"

# Proxy settings (optional)
# PROXY_URL=http://proxy.example.com:8080
# PROXY_USERNAME=user
# PROXY_PASSWORD=pass

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Allowed origins for CORS (comma-separated)
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# API rate limiting (requests per minute)
# RATE_LIMIT=60

# Maximum concurrent requests
# MAX_CONCURRENT=1