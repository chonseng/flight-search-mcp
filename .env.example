# =============================================================================
# FLIGHT SEARCH MCP ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and customize the values for your environment
# All settings are optional and will use sensible defaults if not specified

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application environment (development, testing, staging, production)
FLIGHT_SCRAPER_ENVIRONMENT=development

# Enable debug mode for detailed logging and error reporting
FLIGHT_SCRAPER_DEBUG=false

# =============================================================================
# SCRAPER CONFIGURATION
# =============================================================================

# Browser timeouts (in milliseconds)
FLIGHT_SCRAPER_TIMEOUT=30000
FLIGHT_SCRAPER_NAVIGATION_TIMEOUT=60000
FLIGHT_SCRAPER_WAIT_FOR_RESULTS=10000

# Browser viewport dimensions
FLIGHT_SCRAPER_VIEWPORT_WIDTH=1366
FLIGHT_SCRAPER_VIEWPORT_HEIGHT=768

# Retry and delay settings
FLIGHT_SCRAPER_RETRY_ATTEMPTS=3
FLIGHT_SCRAPER_MIN_DELAY=2.0
FLIGHT_SCRAPER_MAX_DELAY=5.0

# Custom user agent (leave empty to use default)
# FLIGHT_SCRAPER_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"

# =============================================================================
# GOOGLE FLIGHTS URLS
# =============================================================================

# Custom Google Flights URLs (advanced users only)
# GOOGLE_FLIGHTS_BASE_URL=https://www.google.com/travel/flights
# GOOGLE_FLIGHTS_FALLBACK_URL=https://www.google.com/travel/flights

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging level (TRACE, DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOGGING_LEVEL=INFO

# Log file settings
LOGGING_FILE=flight_scraper.log
LOGGING_ROTATION=10 MB
LOGGING_RETENTION=7 days

# Enable/disable logging outputs
LOGGING_CONSOLE_OUTPUT=true
LOGGING_FILE_OUTPUT=true

# Custom log format
# LOGGING_FORMAT="{time:YYYY-MM-DD HH:mm:ss} | {level} | {message}"

# =============================================================================
# OUTPUT CONFIGURATION
# =============================================================================

# Default output format (json, csv, yaml, xml)
OUTPUT_DEFAULT_FORMAT=json

# CSV settings
OUTPUT_CSV_DELIMITER=,

# Maximum number of results to return
OUTPUT_MAX_RESULTS=50

# Include debug information in output
OUTPUT_INCLUDE_DEBUG_INFO=false

# Pretty print JSON output
OUTPUT_PRETTY_PRINT=true

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================

# MCP server connection settings
MCP_HOST=localhost
MCP_PORT=8000

# Use stdio mode instead of HTTP
MCP_USE_STDIO=false

# Enable debug logging for MCP server
MCP_DEBUG=false

# Request timeout in seconds
MCP_TIMEOUT=30

# Maximum results limit for MCP requests
MCP_MAX_RESULTS_LIMIT=50

# =============================================================================
# ADVANCED SELECTOR CONFIGURATION
# =============================================================================
# These settings allow customization of CSS selectors for advanced users
# Only modify if you understand the scraper's selector system

# Form input selectors (comma-separated list)
# SELECTORS_FROM_INPUT='input[placeholder*="Where from"]'
# SELECTORS_TO_INPUT='input[placeholder*="Where to"]'
# SELECTORS_DEPARTURE_DATE='input[placeholder*="Departure"]'
# SELECTORS_RETURN_DATE='input[placeholder*="Return"]'
# SELECTORS_SEARCH_BUTTON='button[aria-label*="Search"]'

# Flight result selectors (comma-separated list)
# SELECTORS_FLIGHT_CONTAINERS='div[role="tabpanel"] ul'
# SELECTORS_AIRLINE_NAME='.Ir0Voe'
# SELECTORS_PRICE='.f8F1md .YMlIz'
# SELECTORS_DURATION='.gvkrdb'
# SELECTORS_STOPS='.EfT7Ae .ogfYpf'
# SELECTORS_DEPARTURE_TIME='.wtdjmc .eoY5cb:first-child'
# SELECTORS_ARRIVAL_TIME='.wtdjmc .eoY5cb:last-child'

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Playwright browser settings for development
# PLAYWRIGHT_BROWSERS_PATH=/custom/path/to/browsers
# PLAYWRIGHT_DOWNLOAD_HOST=https://playwright.azureedge.net

# Test environment settings
# PYTEST_CURRENT_TEST=true
# CI=false

# Performance monitoring
# PERFORMANCE_MONITORING=false
# METRICS_ENDPOINT=https://metrics.example.com

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# API rate limiting (requests per minute)
# RATE_LIMIT=60

# Request timeout for external services (seconds)
# REQUEST_TIMEOUT=30

# Maximum concurrent scraping operations
# MAX_CONCURRENT_OPERATIONS=3

# =============================================================================
# CLOUD DEPLOYMENT SETTINGS
# =============================================================================

# Cloud platform specific settings
# CLOUD_PLATFORM=local
# CLOUD_REGION=us-east-1

# Container settings
# CONTAINER_MEMORY_LIMIT=2GB
# CONTAINER_CPU_LIMIT=1

# Load balancer settings
# LOAD_BALANCER_TIMEOUT=60
# HEALTH_CHECK_INTERVAL=30

# =============================================================================
# MONITORING AND ALERTING
# =============================================================================

# Health check settings
# HEALTH_CHECK_ENABLED=true
# HEALTH_CHECK_PORT=8080

# Metrics collection
# METRICS_ENABLED=false
# METRICS_PORT=9090

# Error tracking
# ERROR_TRACKING_ENABLED=false
# ERROR_TRACKING_DSN=https://your-error-tracking-service.com

# =============================================================================
# PROXY AND NETWORK SETTINGS
# =============================================================================

# HTTP proxy settings (if required)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080
# NO_PROXY=localhost,127.0.0.1

# DNS settings
# DNS_SERVERS=8.8.8.8,8.8.4.4

# Network timeout settings
# CONNECT_TIMEOUT=10
# READ_TIMEOUT=30

# =============================================================================
# NOTES
# =============================================================================
#
# 1. Boolean values can be: true/false, yes/no, 1/0, on/off
# 2. Numeric values should not include units unless specified
# 3. List values should be comma-separated without spaces
# 4. File paths should use forward slashes (/) even on Windows
# 5. URLs should include the protocol (http:// or https://)
# 6. Empty values will use the application defaults
# 7. Comments can be added with # at the beginning of lines
# 8. Environment variables take precedence over .env file values
#
# For more information, see the documentation:
# https://github.com/chonseng/flight-search-mcp/wiki/Configuration